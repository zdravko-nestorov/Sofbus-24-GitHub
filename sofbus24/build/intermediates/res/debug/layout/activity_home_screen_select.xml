<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background image -->

    <RelativeLayout
        android:id="@+id/sofbus24_home_screen_loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_img_empty_content_description"
            android:scaleType="centerCrop"
            android:src="@drawable/bkg_home_screen_select" />

        <!-- Copyrihgt -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:padding="@dimen/home_screen_copyright_txt_padding"
            android:text="@string/home_screen_copyright"
            android:textColor="#989898"
            android:textSize="@dimen/home_screen_copyright_txt_size" />

        <!-- View responsible for the dim effect -->

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4A000000" />
    </RelativeLayout>

    <!-- Choose home screen -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3FAAE5"
        android:orientation="vertical">

        <!-- Top Part of the Screen -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#28A3EE">

            <!-- Image background (top part) -->

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_img_empty_content_description"
                android:scaleType="centerCrop"
                android:src="@drawable/bkg_home_screen_top" />

            <!-- Labels (top part) -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14sp"
                    android:layout_marginTop="16sp"
                    android:text="@string/home_screen_motto"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bkg_home_screen_logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="@string/home_screen_choice_title"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:text="@string/home_screen_choice_subtitle"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>

        </RelativeLayout>

        <!-- Bottom Part of the Screen -->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/grid_border_home_screen" />

        <!-- Standard home screen -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/home_screen_choice_image_width"
                android:layout_height="@dimen/home_screen_choice_image_height"
                android:contentDescription="@string/app_img_empty_content_description"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_home_screen_standard" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_screen_choice_standard_title"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6sp"
                    android:text="@string/home_screen_choice_standard_subtitle"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

        <!-- GoogleMaps home screen -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/home_screen_choice_image_width"
                android:layout_height="@dimen/home_screen_choice_image_height"
                android:contentDescription="@string/app_img_empty_content_description"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_home_screen_map" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_screen_choice_map_title"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6sp"
                    android:text="@string/home_screen_choice_map_subtitle"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

        <!-- Droidtrans home screen -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/home_screen_choice_image_width"
                android:layout_height="@dimen/home_screen_choice_image_height"
                android:contentDescription="@string/app_img_empty_content_description"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_home_screen_droidtrans" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_screen_choice_droidtrans_title"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6sp"
                    android:text="@string/home_screen_choice_droidtrans_subtitle"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

        <!-- Confirm home screen button -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="end|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/home_screen_confirm_image_width"
                android:layout_height="@dimen/home_screen_confirm_image_height"
                android:layout_margin="15sp"
                android:contentDescription="@string/app_img_empty_content_description"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_home_screen_confirm_selector" />
        </LinearLayout>

        <!-- End of "Confirm home screen button" -->

    </LinearLayout>

</RelativeLayout><!-- From: file:/D:/Workspaces/AndroidStudioProjects/Sofbus24/sofbus24/src/main/res/layout/activity_home_screen_select.xml -->
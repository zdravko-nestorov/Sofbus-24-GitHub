<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants" android:focusableInTouchMode="true"
    android:orientation="vertical">

    <bg.znestorov.sofbus24.utils.activity.SearchEditText android:id="@+id/metro_station_search"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_menu_search" android:drawablePadding="5sp"
        android:drawableRight="@drawable/ic_menu_close_clear_cancel"
        android:hint="@string/metro_search_hint" android:maxLines="1" />

    <ListView android:id="@android:id/list" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:visibility="gone" />

    <GridView android:id="@+id/metro_station_list_grid_view" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:numColumns="4" />

    <RelativeLayout android:id="@+id/metro_station_list_empty_view"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:layout_marginLeft="35sp" android:layout_marginRight="35sp" android:gravity="center">

        <ImageView android:id="@+id/metro_station_list_empty_image"
            android:layout_width="wrap_content" android:layout_height="match_parent"
            android:contentDescription="@string/app_img_empty_content_description"
            android:padding="25sp" android:src="@drawable/ic_empty_metro_list" />

        <TextView android:id="@+id/metro_station_list_empty_text"
            android:layout_width="wrap_content" android:layout_height="match_parent"
            android:layout_marginLeft="15sp" android:layout_marginRight="15sp"
            android:layout_toRightOf="@+id/metro_station_list_empty_image" android:gravity="center"
            android:textColor="#080808" android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout><!-- From: file:/D:/Workspaces/AndroidStudioProjects/Sofbus24/sofbus24/src/main/res/layout-sw800dp-land/activity_metro_station_fragment.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <RelativeLayout android:id="@+id/vb_time_street_view" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/vb_time_image_street_view_height">

        <ImageView android:id="@+id/vb_time_street_view_image" android:layout_width="match_parent"
            android:layout_height="@dimen/vb_time_image_street_view_height"
            android:contentDescription="@string/app_img_empty_content_description"
            android:cropToPadding="true" android:scaleType="centerCrop" />

        <ProgressBar android:id="@+id/vb_time_street_view_progress"
            style="@android:style/Widget.ProgressBar.Small.Inverse"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_centerInParent="true" android:visibility="visible" />

        <LinearLayout android:id="@+id/vb_time_bar" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/vb_time_street_view_image"
            android:layout_marginBottom="12sp" android:layout_marginLeft="9sp"
            android:orientation="vertical">

            <TextView android:id="@+id/vb_time_station_caption" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:ellipsize="marquee"
                android:fadingEdge="horizontal" android:shadowColor="#000000" android:shadowDx="0"
                android:shadowDy="0" android:shadowRadius="6" android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#FFFFFF" android:textSize="15sp" android:textStyle="bold" />

            <TextView android:id="@+id/vb_time_current_time" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:shadowColor="#000000"
                android:shadowDx="0" android:shadowDy="0" android:shadowRadius="6"
                android:singleLine="true" android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#FFFFFF" android:textSize="13sp" />
        </LinearLayout>

        <ImageButton android:id="@+id/vb_time_street_view_button"
            style="?android:attr/actionButtonStyle" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/vb_time_street_view_image"
            android:layout_alignRight="@+id/vb_time_street_view_image"
            android:contentDescription="@string/app_img_empty_content_description"
            android:src="@drawable/ic_google_street_view" />
    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:layout_below="@+id/vb_time_street_view">

        <FrameLayout android:id="@+id/vb_time_fragment" android:layout_width="match_parent"
            android:layout_height="match_parent" android:visibility="invisible" />

        <ProgressBar android:id="@+id/vb_time_loading" style="?android:attr/progressBarStyleInverse"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_centerInParent="true" android:visibility="visible" />
    </RelativeLayout>

</RelativeLayout><!-- From: file:/D:/Workspaces/AndroidStudioProjects/Sofbus24/sofbus24/src/main/res/layout-v12/activity_virtual_boards_time.xml -->
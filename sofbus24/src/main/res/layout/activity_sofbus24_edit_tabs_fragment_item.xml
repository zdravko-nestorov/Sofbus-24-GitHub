<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/edit_tabs_visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="10sp"
        android:minHeight="@dimen/edit_tabs_item_height" />

    <TextView
        android:id="@+id/edit_tabs_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/edit_tabs_position"
        android:layout_toRightOf="@+id/edit_tabs_visible"
        android:gravity="center_vertical"
        android:minHeight="@dimen/edit_tabs_item_height"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/edit_tabs_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="15sp"
        android:background="@drawable/tabs_arrange"
        android:contentDescription="@string/app_empty_content"
        android:minWidth="@dimen/edit_tabs_image_arrange_width"
        android:minHeight="@dimen/edit_tabs_image_arrange_height" />

</RelativeLayout>
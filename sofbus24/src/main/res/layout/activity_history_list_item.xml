<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5sp"
    android:paddingRight="?android:attr/scrollbarSize">

    <LinearLayout
        android:id="@+id/history_item_image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1sp"
        android:layout_marginLeft="2sp"
        android:layout_marginRight="12sp"
        android:minHeight="37sp"
        android:minWidth="37sp">

        <ImageView
            android:id="@+id/history_item_favourite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_img_empty_content_description" />
    </LinearLayout>

    <TextView
        android:id="@+id/history_item_search_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="2sp"
        android:layout_toRightOf="@+id/history_item_image_layout"
        android:ellipsize="end"
        android:fadingEdge="horizontal"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/history_item_search_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/history_item_search_text"
        android:layout_marginRight="2sp"
        android:layout_toRightOf="@+id/history_item_image_layout"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/history_item_search_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/history_item_image_layout"
        android:layout_below="@+id/history_item_image_layout"
        android:layout_marginRight="2sp"
        android:singleLine="false"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="13sp"
        android:textStyle="bold" />

</RelativeLayout>
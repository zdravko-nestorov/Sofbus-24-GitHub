<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/metro_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150sp"
        android:layout_marginTop="15sp"
        android:layout_marginRight="150sp"
        android:layout_marginBottom="3sp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/metro_direction1_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/tab_left_unselected"
            android:gravity="center"
            android:padding="9sp"
            android:text="@string/metro_search_tab_direction1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/inner_tab_grey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/metro_direction2_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="-1sp"
            android:layout_weight="1"
            android:background="@drawable/tab_right_unselected"
            android:gravity="center"
            android:padding="9sp"
            android:text="@string/metro_search_tab_direction2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/inner_tab_grey"
            android:textSize="14sp" />
    </LinearLayout>

    <bg.znestorov.sofbus24.utils.activity.NonSwipeableViewPager
        android:id="@+id/metro_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true" />

</LinearLayout>